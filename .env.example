# URL Shortener Environment Configuration (Shared Frontend + Backend)
# Copy this file to .env and update with your actual values
# Command: cp .env.example .env (Linux/macOS) or copy .env.example .env (Windows)

# =============================================================================
# DJANGO BACKEND SETTINGS
# =============================================================================

# Django Core Settings
SECRET_KEY=django-insecure-REPLACE-THIS-WITH-YOUR-ACTUAL-SECRET-KEY-50-CHARACTERS-MIN
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (MySQL with PyMySQL)
DATABASE_NAME=url_shortener
DATABASE_USER=root
DATABASE_PASSWORD=your_mysql_password_here
DATABASE_HOST=localhost
DATABASE_PORT=3306

# Server Configuration
DJANGO_PORT=8000
DJANGO_HOST=127.0.0.1

# URL Shortener Settings
SHORT_CODE_LENGTH=6
BASE_URL=http://localhost:8000

# CORS Settings (for frontend integration)
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080,http://localhost:5000

# Django Superuser Reference (for your own use, not used by Django)
DJANGO_SUPERUSER_USERNAME=youradmin
DJANGO_SUPERUSER_EMAIL=youradmin@example.com
# Never store your superuser password here!

# =============================================================================
# FRONTEND SETTINGS
# =============================================================================

# API Configuration (used by frontend JavaScript)
FRONTEND_API_BASE_URL=http://localhost:8000/api
FRONTEND_SHORT_URL_BASE=http://localhost:8000

# Development Server Settings
FRONTEND_PORT=8080
FRONTEND_HOST=127.0.0.1

# =============================================================================
# SHARED SETTINGS
# =============================================================================

# Environment
NODE_ENV=development
ENVIRONMENT=development

# Logging Configuration
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL SETTINGS (for future features)
# =============================================================================

# Static Files (for production)
STATIC_URL=/static/
STATIC_ROOT=staticfiles/

# Email Settings (for notifications, password reset, etc.)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_specific_password

# Rate Limiting (for future implementation)
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Cache Settings (for production optimization)
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_LOCATION=unique-snowflake

# Security Settings (for production deployment)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False